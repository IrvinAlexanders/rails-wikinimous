<div class="navbar">
  <h4><%= link_to "WikiRick&Morty", articles_path %></h4>
  <h4><%= link_to "New random Character", new_article_path %></h4>
</div>

<div class="container">
  <% require 'kramdown' %>
  <% @articles.each do |article| %>
    <h4><%= link_to article.title, article_path(article) %></h4>
    <p><%= raw Kramdown::Document.new(article.content).to_html %></p>
    <hr>
  <% end %>
</div>
